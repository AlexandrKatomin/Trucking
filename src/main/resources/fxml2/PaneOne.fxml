<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="480.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="trucking.PaneOneController">
   <children>
      <BorderPane fx:id="borderFromOnePane" prefHeight="200.0" prefWidth="980.0">
         <top>
            <HBox prefHeight="31.0" prefWidth="800.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="btnContract" mnemonicParsing="false" onAction="#switchContract" prefHeight="31.0" prefWidth="113.0" text="Договоры">
                     <HBox.margin>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnTrip" mnemonicParsing="false" onAction="#switchTrip" prefHeight="31.0" prefWidth="86.0" text="Рейсы">
                     <HBox.margin>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnCompany" mnemonicParsing="false" onAction="#switchCompany" prefHeight="31.0" prefWidth="86.0" text="Фирмы">
                     <HBox.margin>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnCircleTrip" mnemonicParsing="false" onAction="#switchCircleTrip" prefHeight="31.0" prefWidth="111.0" text="Кругорейсы">
                     <HBox.margin>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnExpense" mnemonicParsing="false" onAction="#switchExpanse" text="Расходы" textOverrun="CLIP">
                     <HBox.margin>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnPaymant" mnemonicParsing="false" onAction="#swinthPaymant" text="Получ. ден. ср.">
                     <HBox.margin>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
         </top>
      </BorderPane>
   </children>
</AnchorPane>
